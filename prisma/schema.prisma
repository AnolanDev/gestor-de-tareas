datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

enum Status {
  PENDING
  IN_PROGRESS
  DONE
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

model Todo {
  id        Int       @id @default(autoincrement())
  title     String
  status    Status    @default(PENDING)
  priority  Priority  @default(MEDIUM)
  createdAt DateTime  @default(now())
  dueDate   DateTime? // ‚Üê nuevo campo opcional
}